<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av"
        Title="Hello World" Width="300" Height="300"
        ResizeMode="NoResize"
        SizeToContent="Height">
    <StackPanel Margin="10">
        <Label Content="Enter your name la dessous ;)" HorizontalAlignment="Stretch" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Background="#FFB10D0D" FontWeight="Bold"/>
        <TextBox Margin="0,10,0,0" Padding="10,0,10,0" FontFamily="Calibri" x:Name="textBox" Height="45" Text="Text Box" FontWeight="Bold" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="16" TextAlignment="Left"/>
        <Button Margin="0,10,0,0" x:Name="Valider" Height="45" FontFamily="Calibri" FontSize="18" FontWeight="Normal" Background="#FFA2A0A0" Content="Push button" Click="say_hello"/>
    </StackPanel>
</Window>